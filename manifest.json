{
  "manifest_version": 2,

  "name": "SecureTube",
  "description": "This extension change all youtube links to HTTPS.",
  "version": "1.0",
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_title": "SecureTube",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs","http://*/*","https://*/*"]
}
